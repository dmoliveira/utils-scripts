#!/usr/bin/env bash
set -euo pipefail

if ! command -v br &>/dev/null; then
  echo "br not found on PATH. Install beads_rust first." >&2
  exit 1
fi

if [[ ! -d ".beads" ]]; then
  br init
fi

if [[ ! -f AGENTS.md ]]; then
  touch AGENTS.md
fi

if ! grep -q "Use 'br' for task tracking" AGENTS.md; then
  echo "Use 'br' for task tracking and planning. Always query 'br ready' before starting work." >>AGENTS.md
fi
