#!/usr/bin/env bash
set -euo pipefail

# ğŸ§© Install Homebrew if not already installed
if ! command -v brew &>/dev/null; then
  echo "Installing Homebrew..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

echo "Updating Homebrew..."
brew update && brew upgrade

# ğŸ§° Core developer tools
brew install \
  wget htop tmux neovim curl git jq tree \
  fzf zoxide ripgrep bat fd gh \
  python uv

# ğŸ§  AI/ML environment (optional)
brew install \
  cmake openblas lapack gfortran \
  protobuf rust

# ğŸš Zsh terminal enhancements
brew install starship zsh zsh-autosuggestions zsh-syntax-highlighting

# ğŸ§© Fonts (optional)
brew install --cask font-fira-code-nerd-font

# ğŸ§® Lua / auxiliary tools (optional)
brew install luarocks

echo "âœ… Setup complete! Recommended next steps:"
echo "- Run: 'chsh -s $(which zsh)' to make Zsh your default shell"
echo "- Run: 'eval \"\$(starship init zsh)\"' to enable Starship prompt"
